extends(src='layout.sgr')
  block(name='content')
    .container
      .grid
        section(class='section -wide')
          div
            header
              h1(mdi) My name is Jeff Reiner, I'm a frontend designer (👨‍💻👨‍🎨) based in Berlin.
              p
                | I'm currently building the future of content infrastructure at
                |
                a(class='link' target='_blank' href='https://www.contentful.com/') Contentful
                |.

        section(class='section')
          div
            p
              | If you have any questions about my work, or design, or development, feel free to
              |
              a(class='link' target='_blank' href='mailto:jeff@reiner.design') shoot me an email
              |.

        section(class='section')
          div
            h2(class='section-title') Projects
            ul
              li: a(class='link' target='_blank' href='https://responsivectabuilder.com') Responsive CTA Builder
              li: a(class='link' target='_blank' href='https://thumbnailer.reiner.design') Wistia Thumbnail Generator
              li: a(class='link' target='_blank' href='https://noti.center') Noti

        section(class='section')
          div
            h2(class='section-title') Talks
            ul
              li
                a(class='link' target='_blank' href='http://slides.com/mirshko/ouch-i-stepped-on-a-spike') Ouch I Stepped On A Spike
                span(role='img') 🌵

        section(class='section')
          div
            h2(class='section-title') Links
            ul
              li
                a(class='link' target='_blank' href='/jeff-reiner.pdf') Résumé
                span(role='img') 📄
              li
                a(class='link' target='_blank' href='https://github.com/mirshko') GitHub
                span(role='img') 🐙😺
              li
                a(class='link' target='_blank' href='https://dribbble.com/mirshko') Dribbble
                span(role='img') 🏀
              li
                a(class='link' target='_blank' href='https://twitter.com/mirshko') Twitter
                span(role='img') 🕊
              li
                a(class='link' target='_blank' href='https://medium.com/@mirshko') Medium
                span(role='img') 📝
              li
                a(class='link' target='_blank' href='https://keybase.io/mirshko') Keybase
                span(role='img') 🔐
              li
                a(class='link' target='_blank' href='https://photos.reiner.design') Photography
                span(role='img') 📷

        section(class='section -wide')
          div
            footer
              p © 2018 Jeff Reiner
