.link
  color: var(--black)
  text-decoration: none
  font-weight: 600
  position: relative

  &::after
    content: ''
    left: 0
    right: 0
    bottom: -1px
    position: absolute
    border-bottom: 6px solid
    mix-blend-mode: overlay
    transition: transform .125s var(--ease-in-out-quad)

  &:hover::after,
  &:active::after
    transform: translateY(6px)
