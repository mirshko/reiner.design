.section-title
  text-transform: uppercase
  color: currentColor
  mix-blend-mode: overlay
  margin-top: 0
  margin-bottom: .5rem
  font-weight: 900
  font-size: responsive 1.5rem 3rem

  @media (--mediumAndUp)
    margin-bottom: 2rem

  @media (--extraLargeAndUp)
    margin-bottom: 3rem

.section
  background-color: #fff
  padding: calc(1rem - .5rem)

  @media (--mediumAndUp)
    padding: calc(2rem - .5rem)

  @media (--largeAndUp)
    padding: calc(3rem - .5rem) calc(4rem - .5rem)
