*
  box-sizing: inherit

html
  background-color: var(--white)
  color: var(--fontColor)

  -webkit-font-smoothing: antialiased
  font-family: var(--fontStack)
  font-size: var(--fontSize)
  line-height: 1.6

h1,
h2,
h3,
h4,
h5,
h6
  color: var(--fontColor)
  font-family: var(--headerFontStack)
  line-height: 1.4
  font-weight: normal
  letter-spacing: 2px

ol,
ul
  margin: 0
  list-style: none
  padding-left: 0

  & li:not(:last-child)
    margin-bottom: 12px
