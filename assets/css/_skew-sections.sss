.skew-sections
  @media (--extraLargeAndDown)
    overflow: hidden

  & > section
    transform: skew(var(--skew))

    & > *
      transform: skew(-var(--skew))

    &:nth-child(even)
      transform: skew(-var(--skew))

      & > *
        transform: skew(var(--skew))

.section
  padding: 1rem 2rem
  border-radius: 1rem

  @media (--mediumAndUp)
    padding: 1.5rem 3rem
    border-radius: 2rem

  @media (--largeAndUp)
    padding: 2rem 4rem
